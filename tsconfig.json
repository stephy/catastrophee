{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "baseUrl": "./",
    "paths": {
      "@catastrophee/styles": ["./packages/styles/src"],
      "@catastrophee/ui": ["./packages/ui/src"],
      "@catastrophee/models": ["./packages/models/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "**/*.spec.ts",
    "test/**/*",
    "**/dist/**/*"
  ]
}

{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es2016", "dom"],
    "baseUrl": "./",
    "typeRoots": ["./src/typings", "../../typings"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "react": ["./src/typings/react.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.test.tsx"]
}
